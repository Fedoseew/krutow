<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="458.0" prefWidth="572.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.name.app.controller.MainController">
    <Button fx:id="load" layoutX="14.0" layoutY="10.0" onMouseClicked="#onClickLoad" style="-fx-background-color: lightblue;" text="Загрузить" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="10.0">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
    <!-- TableView будет подключаться из другого fxml шаблона -->
    <fx:include source="productTable.fxml" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="40" />
   <Button fx:id="add" layoutX="252.0" layoutY="10.0" onMouseClicked="#onClickAdd" style="-fx-background-color: lightgreen;" text="Добавить">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
   <Button fx:id="delete" layoutX="498.0" layoutY="10.0" onMouseClicked="#onClickDelete" style="-fx-background-color: pink;" text="Удалить">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
</AnchorPane>
